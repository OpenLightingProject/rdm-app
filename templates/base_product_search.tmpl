{% extends "base.tmpl" %}

{% block title %}{{ product_type|capfirst }} Search{% endblock %}

{% block content %}
    <div class="search_div">
        {% block search_widget %}{% endblock %}
    </div>
    <table id="model_table" class="results_table">
        <thead>
        <tr>
            <th>Manufacturer Name
                <div class="sorter_icon">&nbsp;</div>
            </th>
            <th>Controller Name
                <div class="sorter_icon">&nbsp;</div>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr class="results_row" onclick="window.location='/{{ product_type }}/display?key={{ product.key }}'">
                <td>{{ product.manufacturer.name }}</td>
                <td>{{ product.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block extra_headers %}
    <script src="/js/app.js"></script>
    <script type="text/javascript">
        app.makeModelTable("model_table");
    </script>
{% endblock %}